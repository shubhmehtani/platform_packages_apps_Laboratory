<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <PreferenceScreen
            android:key="systemui_tuner_statusbar"
            android:title="@string/statusbar_items_category"
            android:layout="@layout/preference_systemui_tuner_statusbaritems" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.TunerActivity" />
         </PreferenceScreen>

   <!-- Battery Styles and percent -->
         <PreferenceScreen
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_category"
            android:layout="@layout/preference_battery_style"
            android:fragment="com.atomicos.laboratory.fragments.StatusbarBatteryStyle" />

   <!-- Statusbar Clock and Date -->
          <PreferenceScreen
            android:key="statusbarclock"
            android:fragment="com.atomicos.laboratory.fragments.StatusbarClock"
            android:layout="@layout/preference_statusbarclock"
            android:title="@string/status_bar_clock" />

    <PreferenceScreen
        android:fragment="com.atomicos.laboratory.fragments.CarrierLabel"
        android:key="carrier_label"
        android:layout="@layout/preference_carrierlabel"
        android:title="@string/carrierlabel_title"/>

    <PreferenceScreen
        android:key="quick_settings"
        android:fragment="com.atomicos.laboratory.fragments.QuickSettings"
        android:layout="@layout/preference_quick_settings"
        android:title="@string/quick_settings_category" />

</PreferenceScreen>
